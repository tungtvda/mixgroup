<div class="event-content col-md-6 col-sm-12 col-xs-12">
    <div class="row row-event">
        <div class="event-box-conner col-md-10 col-sm-10 col-xs-10">
            <div class="event_post_content bg-gradient">
                <div class="event-thumb">
                    <a  href="{link}"><img alt="{name}" src="{img}" class="event-img"></a>
                </div>
                <div class="event-desc">
                    <h3 class="title-eventpost">
                        <a  href="{link}"
                            class="various fancybox.ajax">{name}</a>
                    </h3>
                    <div class="event_post_desc">
                        {content}
                    </div>
                    <a href="{link}"
                       class="detail various">
                        <i class="fa fa-globe"></i> Website</a>
                    <a href="{link_fanpage}"
                       class="detail various">
                        <i class="fa fa-facebook"></i> Fanpage</a>
                    <a href="{link_youtube}"
                       class="detail various">
                        <i class="fa fa-youtube"></i> Youtube</a>
                </div>
            </div>
        </div>
        <div class="event-box-center col-md-2 col-sm-2 col-xs-2">
            <div class="event_post_date">
                {date}
            </div>
        </div>
    </div>
</div>